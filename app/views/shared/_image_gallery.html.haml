#images
  = image_tag image_array.first.filename.url(:large)
   
- image_array.each do |image|
  = link_to(image_tag(image.filename.url(:box), :class => :thumb, :border => 0), '#', :rel => image.image.url(:large), :class => "slide_image")

:javascript
  $(".slide_image").click(function() {
    var image = $(this).attr("rel");
    $('#images').hide();
    $('#images').fadeIn('slow');
    $('#images').html('<img src="' + image + '"/>');
    return false;
  });