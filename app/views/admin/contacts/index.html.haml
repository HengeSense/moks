%h2= t :contacts

%table
  %thead
    %th Contact person
    %th Organisation
    %th City
    %th Country
    %th Website
    %th Email
    %th{:colspan => 3} actions
  %tbody
    - for contact in @contacts
      %tr{:class => cycle('odd', 'even')}
        %td= contact.contact_person
        %td= contact.organisation
        %td= contact.city
        %td= contact.country
        %td= contact.website
        %td= contact.email
        %td= link_to 'Show', [:admin, contact]
        %td= link_to 'Edit', edit_admin_contact_path(contact)
        %td.destroy= link_to 'Destroy', [:admin, contact], :confirm => 'Are you sure?', :method => :delete

= button_to "new contact", new_admin_contact_path, :method => :get
