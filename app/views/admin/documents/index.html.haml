%h2= t :documents
%table
  %thead
    %th Name
    %th User
    %th Description
    %th Attachment
    %th Public
  %tbody
    - for document in @documents
      %tr{:class => cycle('odd', 'even')}
        %td= document.name
        %td= document.user_id
        %td= document.description
        %td= document.attachment.url.gsub(/^.*\./, '')
        %td= document.public
        %td= link_to 'Show', [:admin, document], :class => "btn btn-info btn-small"
        %td= link_to 'Edit', edit_admin_document_path(document), :class => "btn btn-info btn-small"
        %td.destroy= link_to 'Destroy', [:admin, document], :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger btn-small"

%p= link_to "Upload new document", new_admin_document_path
