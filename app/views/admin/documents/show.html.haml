- title "Admin/Document"

%p
  %strong Name:
  = @document.name
%p
  %strong User:
  = @document.user_id
%p
  %strong Description:
  = @document.description
%p
  %strong Attachment:
  = @document.attachment
%p
  %strong Public:
  = @document.public

%p
  = link_to "Edit", edit_admin_document_path(@document)
  |
  = link_to "Destroy", [:admin, @document], :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", admin_documents_path
