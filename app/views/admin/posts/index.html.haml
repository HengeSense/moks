%h2= t :posts
= button_to t(:create_new_post), new_admin_post_path, :method => :get



%table
  %thead
    %th Date
    %th User
    %th Subject
    %th Type
    %th{:colspan => 3} actions
  %tbody
    - @posts.each do |post|
      %tr{:class => cycle('odd', 'even')}
        %td= post.created_at.strftime("%b %d %Y")
        %td= post.old_byline
        %td
          = post.title
          - unless post.images.empty?
            .image_data
              %em= pluralize(post.images.size, 'image')
        %td= post.postcategory.try(:name)
        %td= link_to "Show", [:admin, post]
        %td= link_to "Edit", edit_admin_post_path(post)
        %td.destroy= link_to "Destroy", [:admin, post], :data => {:confirm => 'Are you sure?'}, :method => :delete
= button_to t(:create_new_post), new_admin_post_path, :method => :get