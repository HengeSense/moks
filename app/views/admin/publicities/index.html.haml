%h2 Press/publicity links
%table
  %thead
    %th Name
    %th Source
    %th Author
    %th Attachment
    %th Url
    %th Project
    %th Event
    %th Visit
    %th Sortorder
  %tbody
    - for publicity in @publicities
      %tr{:class => cycle('odd', 'even')}
        %td= publicity.name
        %td= publicity.source
        %td= publicity.author
        %td= publicity.attachment
        %td= publicity.url
        %td= publicity.project
        %td= publicity.event
        %td= publicity.visit
        %td= publicity.sortorder
        %td= link_to "Show", [:admin, publicity]
        %td= link_to "Edit", edit_admin_publicity_path(publicity)
        %td.destroy= link_to "Destroy", [:admin, publicity], :confirm => 'Are you sure?', :method => :delete

= button_to "Create new press/publicity", new_admin_publicity_path, :method => :get
