%h2= t :postcategories
%table
  %thead
    %th Name
    %th{:colspan => 3}
  %tbody
    - for postcategory in @postcategories
      %tr{:class => cycle('odd', 'even')}
        %td= postcategory.name
        %td= link_to "Show", [:admin, postcategory]
        %td= link_to "Edit", edit_admin_postcategory_path(postcategory)
        %td.destroy= link_to "Destroy", [:admin, postcategory], :confirm => 'Are you sure?', :method => :delete

= button_to t(:new) + " " + t(:post_category), new_admin_postcategory_path, :method => :get
