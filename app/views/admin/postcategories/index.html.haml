%h2= t :postcategories
%table
  %thead
    %th= t :name
    %th{:colspan => 3}
  %tbody
    - for postcategory in @postcategories
      %tr{:class => cycle('odd', 'even')}
        %td= postcategory.name
        %td= link_to t(:details), [:admin, postcategory]
        %td= link_to t(:edit), edit_admin_postcategory_path(postcategory)
        %td.destroy= link_to t(:destroy), [:admin, postcategory], :data => {:confirm => t(:are_you_sure)}, :method => :delete

= button_to t(:new) + " " + t(:post_category), new_admin_postcategory_path, :method => :get
