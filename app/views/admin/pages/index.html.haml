%h2= t :pages
%table
  %thead
    %th Title
    %th{:colspan => 3} actions
  %tbody
    - for page in @pages
      %tr{:class => cycle('odd', 'even')}
        %td= page.title
        %td= link_to "Show", [:admin, page]
        %td= link_to "Edit", edit_admin_page_path(page)
        %td.destroy= link_to "Destroy", [:admin,  page], :confirm => 'Are you sure?', :method => :delete
= button_to "New page", new_admin_page_path, :method => :get
