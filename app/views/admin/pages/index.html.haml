%h2= t :pages
%table
  %thead
    %th= t :title_name
    %th{:colspan => 3}= t :actions
  %tbody
    - for page in @pages
      %tr{:class => cycle('odd', 'even')}
        %td= page.title
        %td= link_to t(:details), [:admin, page]
        %td= link_to t(:edit), edit_admin_page_path(page)
        %td.destroy= link_to t(:destroy), [:admin,  page], :confirm => 'Are you sure?', :method => :delete
= button_to "#{t :create_new} #{t :page}", new_admin_page_path, :method => :get
