%h2= t :locations
%table
  %thead
    %th= t :name
    %th= t :address
    %th= t :city
    %th{:colspan => 3}= t :actions
  %tbody
  - for location in @locations
    %tr{:class => cycle('odd', 'even')}
      %td= location.name
      %td= location.address1
      %td= location.city
      %td= link_to t(:details), [:admin, location]
      %td= link_to t(:edit), edit_admin_location_path(location)
      %td.destroy= link_to t(:destroy), [:admin, location], :data => {:confirm => t(:are_you_sure)}, :method => :delete
= button_to "#{t :define_new} #{t :location}", new_admin_location_path, :method => :get
