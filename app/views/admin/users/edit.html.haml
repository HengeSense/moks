= semantic_form_for [:admin, @user], :html => {:multipart => true} do |f|
  - unless f.object.authentications.empty?
    Authenticated through:
  - f.object.authentications.each do |auth|
    %p
      = auth.provider
      = auth.uid
  = f.input :email
  = f.input :real_name
  = f.input :username
  = f.input :roles
  - if @user.avatar?
    = image_tag @user.avatar.url(:thumbnail)
  = f.input :avatar, :label => t(:profile_photo)
  = f.input :artist, :label => t(:is_also_artist)
  = f.submit