%h3 Users
%table.table.table-condensed
  %thead
    %tr
      %th User
      %th Email
      %th Joined
      %th Role
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td
          = link_to user.real_name, user
          = "[#{user.username}]"
        %td= user.email
        %td= user.created_at.to_date
        %td= user.roles.first.name.titleize unless user.roles.first.nil?
        %td
          = link_to 'Edit', edit_admin_user_path(user)
          = render user
        %td= link_to("Delete user", [:admin, user], :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user
