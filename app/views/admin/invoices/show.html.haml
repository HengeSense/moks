  %strong Contact:
  = @invoice.contact_id
%p
  %strong Date Issued:
  = @invoice.date_issued
%p
  %strong Date Due:
  = @invoice.date_due
%p
  %strong Number:
  = @invoice.number
%p
  %strong Amount:
  = @invoice.amount
