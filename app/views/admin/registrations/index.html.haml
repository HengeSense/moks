%h2= t :event_registrations
%table
  %thead
    %th Name
    %th Email
    %th Phone
    %th Amount Paid
    %th Comments
    %th Optional Answer
    %th Event
    %th Actually Showed Up
    %th Waiting List
  %tbody
    - for registration in @registrations
      %tr{:class => cycle('odd', 'even')}
        %td= registration.name
        %td= registration.email
        %td= registration.phone
        %td= registration.amount_paid
        %td= registration.comments
        %td= registration.optional_answer
        %td= registration.event
        %td= registration.actually_showed_up
        %td= registration.waiting_list
        %td= link_to "Show", [:admin, registration]
        %td= link_to "Edit", edit_admin_registration_path(registration)
        %td= link_to "Destroy", [:admin, registration], :confirm => 'Are you sure?', :method => :delete

= button_to "Create new registration", new_admin_registration_path, :method => :get
