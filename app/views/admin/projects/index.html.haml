%h2= t :projects
%table
  %thead
    %th Name
    %th Project type
    %th{:colspan => 3} actions
  %tbody
    - for project in @projects
      %tr{:class => cycle('odd', 'even')}
        %td= project.name
        %td= project.projecttype.try(:name)
        %td= link_to t(:details), [:admin, project]
        %td= link_to t(:edit), edit_admin_project_path(project)
        %td.destroy= link_to t(:destroy), [:admin, project], :data => { :confirm => 'Are you sure?' }, :method => :delete

= button_to "#{t :create_new} #{t :project}", new_admin_project_path, :method => :get
