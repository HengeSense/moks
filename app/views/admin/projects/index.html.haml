%h2= t :projects
%table
  %thead
    %th Name
    %th Project type
    %th{:colspan => 3} actions
  %tbody
    - for project in @projects
      %tr{:class => cycle('odd', 'even')}
        %td= project.name
        %td= project.projecttype.try(:name)
        %td= link_to "Show", [:admin, project]
        %td= link_to "Edit", edit_admin_project_path(project)
        %td.destroy= link_to "Destroy", [:admin, project], :confirm => 'Are you sure?', :method => :delete

= button_to "create new project", new_admin_project_path, :method => :get
