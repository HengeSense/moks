%h2= t :residencytypes
%table
  %tr
    %th= t :name
    %th= t :number_of_residencies
    %th{:colspan => 3}= t :actions
  - for residencytype in @residencytypes
    %tr{:class => cycle('odd', 'even')}
      %td= residencytype.name
      %td= residencytype.visits.size
      %td= link_to t(:details), [:admin, residencytype]
      %td= link_to t(:edit), edit_admin_residencytype_path(residencytype)
      %td.destroy= link_to t(:destroy), [:admin, residencytype], :data => {:confirm => t(:are_you_sure)}, :method => :delete
= button_to "#{t :define_new} #{t :residency_type}", new_admin_residencytype_path, :method => :get
