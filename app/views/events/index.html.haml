.page_heading= t :events

.events
  - @events.each do |event|
    .event
      = render :partial => 'event', locals: {event: event}
      .event_description
        = truncate_html(event.description)
      - unless event.images.empty?
        .inline_gallery= render :partial => 'shared/image_gallery', :locals => {:image_array => event.images }        
      .more_link
        = link_to t(:more), event
        = " > "
        
